#!/bin/bash

export PATH=$PATH:"$HOME/.cabal/bin"
export PATH=$PATH:"$HOME/.local/bin"
export PATH=$PATH:/usr/local/go/bin
export PATH=$PATH:"/usr/lib/jvm/jdk1.8.0_144"

export LEDGER_FILE="$HOME/Documents/org/hledger.journal"

tochar() {
	printf "\x$(printf %x $1)\n"
}

for key in svp-destroyer-ed id_ed25519 id_rsa; do
	if [[ -f ~/.ssh/$key ]]; then
		keychain --nolock $key
	fi
done
. ~/.keychain/`uname -n`-sh

if [[ -n "$TMUX" ]]; then
	echo "Inside TMUX, without synchronizing git"
elif tmux info &> /dev/null; then
	echo "TMUX already running"
else
	synchronize_git_tmux
fi

